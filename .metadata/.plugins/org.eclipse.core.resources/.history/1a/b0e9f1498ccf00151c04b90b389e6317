import org.teachingextensions.logo.Tortoise;

public class obedientturtle {
public static void main(String[] args) {
	Tortoise.show();
	Tortoise.setSpeed(7);
	
	

drawTriangle();
	drawSquare();
}

private static void drawTriangle() {
	Tortoise.turn(30);
	Tortoise.move(70);
	Tortoise.turn(120);
	Tortoise.move(70);
	Tortoise.turn(120);
	Tortoise.move(70);
}

private static void drawSquare() {
	Tortoise.move(50);
	Tortoise.turn(90);
	Tortoise.move(50);
	Tortoise.turn(90);
	Tortoise.move(50);
	Tortoise.turn(90);
	Tortoise.move(50);
	
}

}


